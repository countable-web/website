          .row
            .span4
              .client(
                        data-bottom-top="transform:scale(0.8)",
                        data-center-center="transform:scale(1.1)",
                        data-top-bottom="transform:scale(1.2)")
                p.repr
                  img(src='/images/animatic.svg')
                p WebGL work for global brands.
                p.visit
                  a(href="http://www.animaticmedia.com/", target="_blank") Visit site &rsaquo;
            .span4
              .client(
                        data-bottom-top="transform:scale(0.6)",
                        data-center-center="transform:scale(1.1)",
                        data-top-bottom="transform:scale(1.2)")
                p.repr
                  img(src='/images/kmc.png')
